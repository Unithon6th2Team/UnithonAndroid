<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="mimi.sooo.uniton444.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fce64c"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="67dp"
            android:layout_height="16dp"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="19dp"
            android:layout_weight="1"
            android:scaleType="fitStart"
            app:srcCompat="@mipmap/icon_logo" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_margin="20dp"
            app:srcCompat="@mipmap/icon_navi" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fce64c"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/tabHome"
            android:layout_width="51dp"
            android:layout_height="19dp"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="30dp"
            app:srcCompat="@mipmap/icon_navi_home" />

        <ImageView
            android:id="@+id/tabTodo"
            android:layout_width="50dp"
            android:layout_height="19dp"
            android:layout_marginBottom="11dp"
            android:layout_marginRight="30dp"
            app:srcCompat="@mipmap/icon_navi_todo" />

        <ImageView
            android:id="@+id/tabChat"
            android:layout_width="48dp"
            android:layout_height="19dp"
            android:layout_marginBottom="11dp"
            app:srcCompat="@mipmap/icon_navi_chat" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fce64c"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/underHome"
            android:layout_width="51dp"
            android:layout_height="2dp"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="30dp"
            android:background="#fce64c"
            app:srcCompat="@mipmap/margin" />

        <ImageView
            android:id="@+id/underTodo"
            android:layout_width="50dp"
            android:layout_height="2dp"
            android:layout_marginRight="30dp"
            android:background="#ff5700"
            app:srcCompat="@mipmap/margin" />

        <ImageView
            android:id="@+id/underChat"
            android:layout_width="48dp"
            android:layout_height="2dp"
            android:background="#fce64c"/>

    </LinearLayout>
    <android.support.v4.view.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>
